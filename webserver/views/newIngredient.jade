extends layout

block content
    h1.ingredientPage Propose a new Ingredient!

    .div(style="margin:auto; margin-top:7%; width:70%")
        .col-md-8.col-md-offset-2
            .panel.panel-danger
                div
                    h1.ingredientPage Fill and Submit
                .panel-body
                    div(style="margin:auto;")
                        form(action='/save_ingredient', method='POST')
                            .form-group
                                label Name
                                input.form-control(type='text', placeholder='Name', name='name')
                            .form-group
                                label Description
                                input.form-control(type='text', placeholder='Description', name='description')
                            button.btn.btn-default(type='submit') Submit
