                        li
                            a(href='/newPizza') Propose your Pizza
                    //ul.nav.navbar-nav.navbar-right
                        li
                            a(href='#')
                                span.glyphicon.glyphicon-log-in
                                |  Login
        #myCarousel.carousel.slide(data-ride='carousel')
            // Indicators
            ol.carousel-indicators
                li.active(data-target='#myCarousel', data-slide-to='0')
                li(data-target='#myCarousel', data-slide-to='1')
            // Wrapper for slides
            .carousel-inner(role='listbox')
                .item.active
                    img.img-responsive(src='images/Pizza.jpg', alt='Image')
                    .carousel-caption
                        h3 Take a look at existing pizzas
                        //p in our website
                .item
                    img.img-responsive(src='images/Pizza2.jpg', alt='Image')
                    .carousel-caption
                        h3 Propose your idea!!
                        //p bla bla bla
            // Left and right controls
            a.left.carousel-control(href='#myCarousel', role='button', data-slide='prev')
                span.glyphicon.glyphicon-chevron-left(aria-hidden='true')
                span.sr-only Previous
            a.right.carousel-control(href='#myCarousel', role='button', data-slide='next')
                span.glyphicon.glyphicon-chevron-right(aria-hidden='true')
                span.sr-only Next
